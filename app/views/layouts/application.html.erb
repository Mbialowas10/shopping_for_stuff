            </li>
					<% end %>
				</ul>
			<% end %>
		</li>
	</ul>
</nav>
    <header>
      <section>
        <% #debug cart %>
        <%= debug session[:shopping_cart] %>
      </section>
    </header>
    <main>
      <% if flash[:notice] %>
        <p><%= flash[:notice] %></p>
      <% end %>
      <%= yield %>
    </main>
    <footer>
      <details>
        <summary>
            Cart
            <% if cart.present? %>
              <sup><%= cart.size %></sup>
            <% end %>
        </summary>
        <% if cart.present? %>
          <ul>
            <% cart.each do |product| %>
              <li>
                <%= product.name %> <%# link_to '‚ùå', cart_path(product), method: :delete %>
                <%= button_to "‚ùå", cart_path(product), method: :delete %>

              </li>
            <% end %>
          </ul>
        <% else %>
